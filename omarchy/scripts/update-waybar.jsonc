{
  "modules-left": [],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "custom/tailscale",
    "power-profiles-daemon"
  ],
  "clock": {
    "format": "{:%A %I:%M %p}",
    "format-alt": "{:%d %B W%V %Y}",
    "tooltip": false
  },
  "hyprland/window": {
    "separate-outputs": true,
    "icon": false,
    "icon-size": 20
  },
  "custom/tailscale": {
    "exec": "~/.config/waybar/custom/tailscale.sh",
    "interval": 5,
    "return-type": "json",
    "tooltip": true,
    "format": "{text}",
    "on-click": "~/.config/waybar/custom/tailscale.sh toggle"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    }
  }
}
